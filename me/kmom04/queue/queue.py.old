#!/usr/bin/python3
"""queue.py kmom04."""

from node import Node
from errors import EmptyQueueException


class Queue:
    """Define Queue class."""

    def __init__(self):
        self.head = None
        self.tail = None
        self._counter = 0

    def is_empty(self):
        """Check if queue is empty."""
        return self.head is None

    def enqueue(self, data):
        """Add element to the queue."""
        if self.head is None:
            self.head = Node(data)
            self.tail = self.head
        else:
            self.tail.next = Node(data)
            self.tail = self.tail.next

        self._counter += 1

    def dequeue(self):
        """Add element to the queue."""
        if self.head is None:
            raise EmptyQueueException
        current_head = self.head
        if self.head is self.tail:
            self.head = None
            self.tail = None
        else:
            self.head = self.head.next
        self._counter -= 1
        return current_head.data

    def peek(self):
        """Show the first element in the queue."""
        if self.head is not None:
            return self.head.data
        raise EmptyQueueException

    def size(self):
        """Show the size of the queue."""
        return self.counter

    @property
    def counter(self):
        """Show numver of elements in the queue."""
        return self._counter
